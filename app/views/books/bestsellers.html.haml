- if @books.nil?
  %h3.error.text-center No books found
- else
  .container
    .row
      - @books.each do |book|
        .col-md-3
        .col-md-6
          .col-sm-12
            .visible-xs-block.text-center
              %h4= link_to book.title, book
              %h5
                = t('books.by')
                - book.authors.map do |n|
                  = link_to "#{n.firstname} #{n.lastname}", n
            .hidden-xs
              %h4= link_to book.title, book
              %h5
                = t('books.by')
                - book.authors.map do |n|
                  = link_to "#{n.firstname} #{n.lastname}", n
          .col-sm-3.col-md-3
            =image_tag('no_img.png', class: "img-responsive center-block")
          .col-sm-9.col-md-9
            %p{:align => "justify"}= book.description
          .col-sm-12
            %h4.form-inline.pull-right
              = number_to_currency book.price
              %input.form-control{:type => "text", :value => "1"}
              %button.btn.btn-primary{:type => "submit"}= t('books.add_to_cart')
          %h4.col-sm-12
        .col-md-3
  .container
    .row
      .col-sm-4
      .col-sm-4
        %h4.text-center
          = t('books.welcome')
      .col-sm-4


