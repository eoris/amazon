.col-sm-2
.col-sm-8
  %h4
    - if text_title
      = book.title
    - else
      = link_to book.title, book
  %h5
    = t('books.by')
    - book.authors.map do |n|
      = link_to "#{n.firstname} #{n.lastname}", n
  .col-md-4
    =image_tag('no_img.png', class: "img-responsive center-block")
    = render partial: "stars", locals: {book: book}
  .col-md-8
    %p#book-description{:align => "justify"}
      = book.description
  = render partial: "order_items/add_to_cart", locals: {book: book}
.col-sm-2
